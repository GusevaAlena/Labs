<Window x:Class="ITMO.Wpf.Pr04.Ex02.UserIn2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.Wpf.Pr04.Ex02.UserIn2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox Name="richTextBox1" HorizontalAlignment="Left" Height="362" Margin="0,59,0,-0.333" VerticalAlignment="Top" Width="793">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ToolBar HorizontalAlignment="Left" Height="59" VerticalAlignment="Top" Width="793">
            <Button Name="ButtonBold" Margin="0,0,0,16" VerticalAlignment="Bottom" Click="ButtonBold_Click">Bold</Button>
            <Button Name="ButtonItalic" Click="ButtonItalic_Click">Italic</Button>
           
            <Slider Name="Slider1" Minimum="2" Maximum="72" Width="100" ValueChanged="Slider1_ValueChanged"></Slider>
            <ComboBox Name="comboBox1" Width="75" SelectionChanged="comboBox1_SelectionChanged"></ComboBox>
        </ToolBar>
        

    </Grid>
</Window>
